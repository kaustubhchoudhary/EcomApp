<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>EcomApp</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
    <!-- ===================== -->
    <!-- Authentication Filter -->
    <!-- ===================== -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>app.ecom.filters.AuthFilter</filter-class>
    </filter>

    <!-- ===================== -->
    <!-- Authorization Filter -->
    <!-- ===================== -->
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>app.ecom.filters.AuthorizationFilter</filter-class>
    </filter>

    <!-- ===================== -->
    <!-- JSP Access Filter -->
    <!-- ===================== -->
    <filter>
        <filter-name>JspAccessFilter</filter-name>
        <filter-class>app.ecom.filters.JspAccessFilter</filter-class>
    </filter>

    <!-- ===================== -->
    <!-- Filter Mappings -->
    <!-- ORDER MATTERS HERE -->
    <!-- ===================== -->

    <!-- 1. Authentication: All requests -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 2. Authorization: Role-based -->
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/subadmin/*</url-pattern>
    </filter-mapping>

    <!-- 3. JSP Protection -->
    <filter-mapping>
        <filter-name>JspAccessFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
</web-app>